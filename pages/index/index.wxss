/**index.wxss**/
.container{
  height: 100vh;
}
.header{
  padding-top: 20rpx;
  width: 750rpx;
  display: flex;
  flex-direction: column;
  justify-content:space-between
}
.header-top{
  display: flex;
  padding: 0 20rpx;
  align-items: flex-end;
}
.header-seller{
  flex: 1;
  
}
.header-top .switch{
  width: 200rpx;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #f7f7f7;
  border-radius: 60rpx;
  display: flex;
  align-items: center;
}
.header-top .switch .item{
  text-align: center;
  flex: 1;
  font-size: 26rpx;
  height: 100%;
  color: #666;
}
.header-top .switch .active {
  background-color: #000;
  color: #fff;
  border-radius: 60rpx;
}
.header-bottom{
  display: flex;
  padding: 0 20rpx;
  margin-top: 20rpx;
}
.seller-posin{
  flex: 1;
  display: flex;
  align-items: center;
  text-align: right;
}
.seller-posin:last-child{
  text-align: right;
}
.main{
  display: flex;
  margin-top: 20rpx;
}
.nav{
  width: 160rpx;
}
.list-dox{
  flex:1;
}
.swiper{
  height: 260rpx;
  padding: 20rpx;
}
.scroll-view{
  height: 100%;
}
.banner-img{
  width: 100%;
  height: 260rpx;
}
.list-item{
  padding:0 20rpx 20rpx 20rpx;
}
.item-box{
  margin:16rpx 0
}
.goods-btn{
  position: absolute;
  right: 10rpx;
  bottom: 10rpx;
}
.cart-box{
  width: 750rpx;
  height: 100rpx;
  background-color:#ccc;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
}
.cart-info{
  flex: 1;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
}
.cart-num{
  width: 150rpx;
  display: flex;
  position: relative;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 50rpx;
  text-align: center;
}
.cart-num .icon{
  padding-right: 8rpx;
}
.cart-num text{
  position: absolute;
  right: 10rpx;
  top: 8rpx;
  width: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
  border-radius: 20rpx;
  color: #fff;
  background-color: red;
  font-size: 18rpx;
}
.cart-price{
  flex: 1;
  text-align: right;
  font-size: 36rpx;
  color: red;
}
.cart-btn{
  width: 200rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background-color:red;
  color: #fff;
  font-size: 28rpx;
}
.cart-del{
  background-color: #f7f7f7;
  padding: 20rpx;
  display: flex;
  align-items: center;
}
.cart-del .icon{
  padding-right: 10rpx;
}
.cart-cell{
  padding:20rpx;
  margin: 10rpx 0;
  display: flex;
  align-items: center;
}
.c-title{
  flex: 1;
}
.c-price{
  width: 160rpx;
  padding: 0 20rpx;
  text-align: right;
}
.c-num{
  width: 200rpx;
  display: flex;
}
.d-dox{
  height: 100%;
  position: relative;
}
.d-title{
  padding:20rpx;
  font-size:36rpx;
}
.d-title text{
  color: red;
  padding-left: 28rpx;
}
.d-attr{
  padding:0 20rpx 130rpx;
}
.d-attr-cell{
  margin:20rpx 0;

}
.d-cell-name{
  color: #666;
  font-size:24rpx;
}
.d-cell-desc{
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: space-between;
  margin-top: 10rpx;
}
.d-item{
  width: 200rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 10rpx;
  border:1px solid #f7f7f7;
  margin:10rpx 0;
}
.d-item-null{
  width: 200rpx;
  height: 60rpx;
  margin:10rpx 0;
}
.d-item.active{
  border:1px solid red;
  color: red;
}
.d-bottom{
  width: 100%;
  height: 110rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  background-color: #fff;
  display: flex;
  align-items: center;
}
.d-btn{
  width: 700rpx;
  margin:0 auto;
}
